# ==============================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==============================================
# This file contains environment variables specifically for local development
# Copy this to .env for local development use

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Application Settings
APP_NAME="Optimizely AI - Development"
APP_VERSION=0.1.0
LOG_LEVEL=debug
DEBUG=true

# Server Configuration
API_PORT=4000
WEB_PORT=3001
HOST=localhost
CORS_ORIGIN=http://localhost:3001

# Database Configuration (PostgreSQL)
# Uncomment and configure when PostgreSQL is set up
# DATABASE_URL="postgresql://dev_user:dev_password@localhost:5432/optimizely_dev"
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=optimizely_dev
# DB_USER=dev_user
# DB_PASSWORD=dev_password
# DB_SSL=false
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_DEFAULT=3600

# Security & Authentication
JWT_SECRET=dev_jwt_secret_change_in_production_this_is_not_secure
JWT_EXPIRY=7d
SESSION_SECRET=dev_session_secret_change_in_production
BCRYPT_ROUNDS=10

# Rate Limiting (Development - More Permissive)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Feature Flags (Development)
FEATURE_ANALYTICS_ENABLED=true
FEATURE_AB_TESTING_ENABLED=true
FEATURE_PSYCHOGRAPHIC_ANALYSIS=true
FEATURE_REAL_TIME_OPTIMIZATION=true
FEATURE_CRM_INTEGRATION=true
FEATURE_DEBUG_MODE=true
FEATURE_MOCK_DATA=true

# External API Configuration (Development/Mock)
# Anthropic Claude API (for AI features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (alternative AI provider)
OPENAI_API_KEY=your_openai_api_key_here

# Google Analytics (Development property)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Monitoring & Analytics (Development)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME="Optimizely AI Dev"

# Email Configuration (Development - Use mock service)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=dev@optimizely-ai.local
SMTP_FROM_NAME="Optimizely AI Development"

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,text/csv,application/json

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=86400

# Development Tools
HOT_RELOAD=true
SOURCE_MAPS=true
TYPESCRIPT_CHECK=true

# Testing Configuration
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost:5432/optimizely_test"
TEST_REDIS_URL=redis://localhost:6379/1

# Development Debugging
DEBUG_SQL=true
DEBUG_REDIS=true
DEBUG_API_CALLS=true
DEBUG_PERFORMANCE=true
VERBOSE_LOGGING=true
